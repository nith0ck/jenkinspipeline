pipeline{
    agent any
    stages {
        stage ('Build')
        {
            step {
              echo 'Building the Project...'
              }
        }
         stage ('Deploy')
        {
            step {
              echo 'Deploying the Project...'
              }
        }
         stage ('Test')
        {
            step {
              echo 'Testing the Project...'
              }
        }
         stage ('Release')
        {
            step {
            echo 'Releasing the Project...'
            }      
         }
     }
}
